<div class="comments-edit">
	<% if current_user %>
		<%= form_for @comment do |f| %>
			<%= f.hidden_field :post_id, value: params[:post_id] %>
			<%= f.hidden_field :user_id, value: current_user.id %>

			<%= f.label :content %>
			<%= f.text_field :content %>

			<%= f.submit %>
		<% end %>
	<% end %>
</div>